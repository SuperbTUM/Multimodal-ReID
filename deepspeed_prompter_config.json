{
  "train_batch_size": 64,
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.000005,
      "weight_decay": 0.0001
    }
  },
  "fp16": {
    "enabled": true,
    "auto_cast": true
  },
  "zero_optimization": {
    "stage": 3,
    "reduce_bucket_size": 5e8,
    "offload_optimizer": {
            "device": "cpu"
        },
    "contiguous_gradients": true,
    "overlap_comm": true
  }
}